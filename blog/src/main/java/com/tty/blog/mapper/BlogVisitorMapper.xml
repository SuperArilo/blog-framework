<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tty.blog.mapper.BlogVisitorMapper">
    <resultMap id="visitorList" type="com.tty.blog.vo.BlogVisitorVO">
        <id column="id" property="id"/>
        <result property="uid" column="uid"/>
        <result property="visitTime" column="visitTime"/>
        <result property="avatar" column="avatar"/>
        <result property="nickName" column="nickName"/>
    </resultMap>
    <select id="queryVisitorList" resultMap="visitorList">
        select
            bv.id,
            bv.uid,
            bv.visitTime,
            bum.avatar,
            bum.nickName
        from blog_visitor as bv
                 left join blog_user_means as bum on bv.uid = bum.uid
        order by bv.visitTime desc
    </select>

    <delete id="deleteVisitorRecord">
        delete from blog_visitor where uid = #{uid}
    </delete>

    <select id="queryVisitorByOne" resultType="com.tty.blog.entity.BlogVisitor">
        select * from blog_visitor as bv where bv.uid = #{uid}
    </select>

    <update id="updateVisitor">
        update blog_visitor as bv set
        bv.visitTime = #{visitTime}
        where bv.id = #{id}
    </update>

</mapper>
